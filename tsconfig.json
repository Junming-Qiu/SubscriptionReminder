{
  "compilerOptions": {
    "target": "es5",  
    "lib": [
      "dom",
      "dom.iterable",
      "esnext.asynciterable" //Apollo
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "experimentalDecorators": true, //Allow use of entities
    "emitDecoratorMetadata": true,
  },
  "include": [
    "./src", "./server/src"
  ]
}